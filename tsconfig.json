{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es2017", "dom"],
    "sourceMap": true,
    "declaration": true,
    "strict": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "experimentalDecorators": true
  },
  "files": [
    "index.ts",
    "bin/machinomy.ts",
    "commands/index.ts",
    "examples/server.ts",
    "examples/client.ts",
    "examples/machinomy.ts"
  ],
  "include": [
    "node_modules/**/index.d.ts",
    "lib/*.ts",
    "types/*/index.d.ts",
    "test/*.ts",
    "integration_test/**/*.ts"
  ]
}
